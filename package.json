{
  "name": "documentation-theme-ecl",
  "version": "1.0.10",
  "description": "ECL theme for documentation.js",
  "main": "index.js",
  "keywords": [
    "documentation",
    "europa component library"
  ],
  "author": "Kalin Chernev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kalinchernev/documentation-theme-ecl"
  },
  "bugs": {
    "url": "https://github.com/kalinchernev/documentation-theme-ecl/issues"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "documentation build example/src --theme . -f html -o ./dist",
    "bundle": "webpack",
    "develop": "run-p develop:*",
    "develop:theme": "documentation build --watch ./example/src **/*._ *._ ./assets/js ./assets/styles --theme . -f html -o ./dist",
    "develop:server": "reload -d ./dist",
    "develop:assets": "webpack -w",
    "dist": "run-s clean bundle build",
    "lint": "eslint .",
    "start": "run-s clean bundle build develop"
  },
  "dependencies": {
    "@ecl/ec-preset-website": "2.0.0",
    "anchor-js": "4.1.0",
    "concat-stream": "1.6.0",
    "documentation": "5.3.5",
    "github-slugger": "1.2.0",
    "highlight.js": "9.12.0",
    "lodash": "4.17.5",
    "normalize.css": "7.0.0",
    "vinyl": "2.1.0",
    "vinyl-fs": "3.0.2"
  },
  "devDependencies": {
    "autoprefixer": "7.2.5",
    "babel-eslint": "8.2.1",
    "babel-loader": "7.1.2",
    "babel-preset-env": "1.6.1",
    "babel-preset-flow": "6.23.0",
    "css-loader": "0.28.9",
    "cssnano": "3.10.0",
    "eslint": "4.17.0",
    "eslint-config-airbnb-base": "12.1.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flowtype": "2.43.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-prettier": "2.6.0",
    "extract-text-webpack-plugin": "3.0.2",
    "file-loader": "1.1.6",
    "node-sass": "4.7.2",
    "npm-run-all": "4.1.2",
    "postcss-loader": "2.0.10",
    "postcss-scss": "1.0.3",
    "reload": "2.2.2",
    "resolve-url-loader": "2.2.1",
    "sass-loader": "6.0.6",
    "style-loader": "0.20.1",
    "webpack": "3.11.0"
  }
}
